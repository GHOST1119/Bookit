@model Bookit.Models.Book

<div class="col-sm-2">
    <img src="@Model.ImagePath" alt="@Model.Name" class="img-responsive" />
</div>
<div class="col-sm-10">
    <h4>@Model.Name (@Model.Year)</h4>
    <p>Author : @Model.Author</p>
    <p>Year : @Model.Year</p>
    <p>Pages : @Model.Pages</p>
    <p>Price : @Model.Price</p>
    <p>
        <a asp-action="More" asp-route-id="@Model.Id" asp-controller="Book" asp-area="" class="btn btn-primary">More...</a>
        <a asp-action="Create" asp-route-bookId="@Model.Id" asp-controller="Order" asp-area="" class="btn btn-success" style="width:200px">Order now</a>
    </p>
</div>